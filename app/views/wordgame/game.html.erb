<h1>Welcome to the longest word-game !</h1>
<h2>Here is your grid :</h2>
<h2><%= @grid.join(" ") %></h2>

<form action="/score" method='GET'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="question">What's your best shot ?</label>
  <input type="text" id="question" name="shot" placeholder="your best shot">
  <input type="submit" value="Go!" class="btn btn-primary btn-block">
  <input type="hidden" name="start_date" value="<%= Time.now %>">
  <input type="hidden" name="grid" value="<%= @grid %>">
  <input type="hidden" name="nb_of_games" value="<%= @nb_of_games.to_i %>">

</form>
